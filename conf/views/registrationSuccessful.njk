{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/panel/macro.njk"         import govukPanel %}


{% block pageTitle %}
  {{ title(messages("registrationSuccessful.title")) }}
{% endblock %}

{% block mainContent %}

{% if recruitmentBannerToggle %}
    <div id="recruitment-banner" class="full-width-banner js-hidden govuk-body">
        <div class="centered-content visible full-width-banner__container" aria-hidden="false">
            <a id="recruitment-banner-dismiss" class="full-width-banner__close" href="#" role="button">
                <span>{{ messages("recruitmentBanner.dismiss") }}</span>
            </a>
            <div class="full-width-banner__title">
                {{ messages("recruitmentBanner.title") }}
            </div>
            <p><a href="https://signup.take-part-in-research.service.gov.uk/?utm_campaign=DAC_6_Reg&utm_source=Other&utm_medium=other&t=HMRC&id=271"
             target="_blank">{{ messages("recruitmentBanner.text") }}</a></p>
        </div>
    </div>
{% endif %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ govukPanel({
            titleText: messages("registrationSuccessful.panel"),
            html: subscriptionID
        }) }}

        <div class="govuk-body">
            <p>{{ messages("registrationSuccessful.subscriptionID.text") }}</p>

            <h2 class="govuk-heading-m">
              {{ messages("registrationSuccessful.heading") }}
            </h2>

            <p>{{ messages("registrationSuccessful.email") }}</p>
            <p>{{ messages("registrationSuccessful.submission.text") }}
            <a href={{submissionUrl}} class="govuk-link">{{messages("registrationSuccessful.submission.link")}}</a></p>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
